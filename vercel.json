{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/generate-demo-reservations",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/auto-complete-reservations",
      "schedule": "*/10 * * * *"
    }
  ]
}

